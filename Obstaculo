public class Obstaculo {
	public boolean ultrapassou;
	private int distanciaObj = 255;

	// constructor
	public Obstaculo() {
		GerarObstaculo();
	}

	public void GerarObstaculo() {
		ultrapassou = false;
		System.out.println("Um novo obstaculo foi gerado à " + distanciaObj
				+ " cm");
		Thread thGerarObstaculo = new Thread(new Runnable() {
			// Logica a ser executada
			public void run() {

				while (!ultrapassou) {
					try {
						Thread.sleep(50);
					} catch (InterruptedException e) {
						System.err.println("Ainda não ultrapassou");
					}

				}
				GerarObstaculo();

			}
		});

		// Inicia a thread
		thGerarObstaculo.start();
	}

	public int getDistanciaObj() {
		return distanciaObj;
	}
}
